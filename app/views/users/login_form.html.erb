<%= form_tag(login_path) do %>
  <div class="login_form">
    <p>メールアドレス</p>
    <input name="email" value="<%= @email %>">
    <p>パスワード</p>
    <input type="password" name="password" value="<%= @password %>">
    <% if @error_message %>
    <div class="error">
      <%= @error_message %>
    </div>
    <% end %>
    <p><input type="submit" ></p>
  </div>
<% end %>
