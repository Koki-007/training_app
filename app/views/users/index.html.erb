<div class="index-wrapper">
  <h1>ユーザー一覧</h1>
  <% @users.each do |user|  %>
    <h2><%= link_to user.name, user_path(user)  %></h2>
    <% if user.id == @current_user.id %>
    <%= link_to '[編集]',edit_user_path(user), class: 'command' %>
    <%= link_to '[削除]',
    user_path(user),
    method: :delete,
    class: 'command',
    data: { confirm: '本当に削除しますか？'}
     %>
     <% end %>
  <% end %>

</div>
