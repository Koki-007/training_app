<%= form_tag @user do %>
<div class="signup">
  <p>ユーザー名</p>
  <input name="name" value="<%= @user.name %>" >
  <% if @user.errors.messages[:name].any? %>
  <span class="error"><%= @user.errors.messages[:name][0]%></span>
  <% end %>
  <p>メールアドレス</p>
  <input name="email" value="<%= @user.email %>" >
  <% if @user.errors.messages[:email].any? %>
  <span class="error"><%= @user.errors.messages[:email][0]%></span>
  <% end %>
</div>
<input type="submit">
<% end %>
